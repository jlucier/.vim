{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "coc.preferences.willSaveHandlerTimeout": 1000,
  "pyright.enable": false,
  "languageserver": {
    "pylsp": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/home/jordan/perch/:/home/perch/code/:ro",
        "-v",
        "/home/jordan/perch/:/home/jordan/dev/perch/:ro",
        "perch_api:lsp",
        "pylsp",
        "--log-file",
        "/tmp/lsp_python.log"
      ],
      "trace.server": "verbose",
      "rootPatterns": ["pyproject.toml", "requirements.txt", "setup.py", ".flake8"],
      "filetypes": ["python"],
      "settings": {
        "pylsp": {
          "enable": true,
          "configurationSources": ["flake8"],
          "plugins": {
            "autopep8": {
              "enabled": false
            },
            "pycodestyle": {
              "enabled": false
            },
            "pyflakes": {
              "enabled": false
            },
            "flake8": {
              "enabled": true,
              "config": "/home/perch/code/perch_api/.flake8"
            }
          }
        }
      }
    }
  }
}
